<div class="admin-toolbar" id="adminToolbar">
        <a href="dashboard.jsp" class="btn btn-nav" data-path="dashboard.jsp">Dashboard</a>
        <a href="admin-event.jsp" class="btn btn-nav" data-path="admin-event">Admin Publish</a>
        <a href="admin-users" class="btn btn-nav" data-path="admin-users">Manage Users</a>
        <a href="admin-locations" class="btn btn-nav" data-path="admin-locations">Locations</a>
        <!-- Deprecated inline toolbar; links moved to admin-tools.jsp -->
        <a href="admin-tools.jsp" class="btn btn-nav" data-path="admin-tools.jsp">Admin Tools</a>
        
</div>
<script>
// Highlight active admin toolbar link client-side
(function(){
    var path = location.pathname;
    var links = document.querySelectorAll('#adminToolbar a[data-path]');
    links.forEach(function(a){
        if(path.endsWith('/' + a.getAttribute('data-path')) || path.endsWith('/' + a.getAttribute('data-path') + '.jsp')){
            a.classList.add('active');
        }
    });
})();
</script>
